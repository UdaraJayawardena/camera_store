        <Button x:Name="signIn" Content="Sign In" HorizontalAlignment="Left" Margin="64,195,0,0" VerticalAlignment="Top" Width="75" Click="btnSignIn" RenderTransformOrigin="-0.168,2.328" Height="19"/>
