        <Button x:Name="ItemDetails" Content="Item Details" HorizontalAlignment="Left" Margin="348,195,0,0" VerticalAlignment="Top" Width="75" Click="btnItemDetails" Height="19" RenderTransformOrigin="-2.648,-7.174"/>

    </Grid>
</Window>
